- @title = "Sign Up"
%link{:href => "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/css/materialize.min.css", :rel => "stylesheet"}
%link{:href => "/assets/sections/_authenticate_page.scss", :rel => "stylesheet"}

  %div.container
  = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
    #login-page.row
      .col.s12.z-depth-6.card-panel
        %form.login-form
          .row
            .input-field.col.s12.center
              %img.responsive-img.valign.profile-image-login{:alt => "", :src => "/assets/logoT.png", :style => "width:150px;height:150px;"}
                %h5
                  %p.center Fill Out The Fields Below To Get Started.
                %p.center.login-form-text It only takes a minute.

            / = devise_error_messages!
            .row.margin
              .input-field.col.s12
                %i.mdi-social-person-outline.prefix
                = f.text_field :name, id:"username", class:"validate", label: false
                %label.center-align{:for => "username", class:"center-align"} Name

            .row.margin
              .input-field.col.s12
                %i.mdi-social-person-outline.prefix
                = f.text_field :username, id:"username", class:"validate", label: false
                %label.center-align{:for => "username", class:"center-align"} Username
            .row.margin
              .input-field.col.s12
                %i.mdi-communication-email.prefix
                = f.email_field :email, id:"email", class:"validate", label: false
                %label.center-align{:for => "email", class:"center-align"} Email
            .row.margin
              .input-field.col.s12
                %i.mdi-action-lock-outline.prefix
                = f.password_field :password, id:"password", class:"validate", label: false, autocomplete: "off"
                %label.center-align{:for => "password"} Password
            .row.margin
              .input-field.col.s12
                %i.mdi-action-lock-outline.prefix
                = f.password_field :password_confirmation, id:"password-again", label: false, autocomplete: "off"
                %label.center-align{:for => "password-again"} Re-type password
            .row
              .input-field.col.s12
                = f.button "Register Now", class:"btn waves-effect waves-light col s12"
                %p.margin.center.medium-small.sign-up
                  - if controller_name != 'sessions'
                    Already have an account?
                    = link_to "Login", new_session_path(resource_name)
                    %br
                    %br
              %fieldset.title2.container
                %legend OR
          %p.center
            = render partial: "devise/shared/links"
    / Post Page - Responsive

