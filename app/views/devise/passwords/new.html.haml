- @title = "Sign In"
%link{:href => "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/css/materialize.min.css", :rel => "stylesheet"}
  :css
    html,
    body {
        height: 100%;
    }
    html {
        display: table;
        margin: auto;
    }
    body {
        display: table-cell;
        vertical-align: middle;
        padding: 50px;
    }
    .margin {
      margin: 0 !important;
    }
    form p:last-child {
      margin-bottom: 10px;
    }
    .row {
    margin-bottom: 0px;
    }

  %body.blue
    = form_for(resource, as: resource_name, url: password_path(resource_name)) do |f|
      #login-page.row
        .col.s12.z-depth-6.card-panel
          %form.login-form
            .row
              .input-field.col.s12.center
                %img.responsive-img.valign.profile-image-login{:alt => "", :src => "/assets/logoT.png", :style => "width:150px;height:150px;"}
                  %h5
                    %p.center Forgot your password?

              / = devise_error_messages!

              .row.margin
                .input-field.col.s12
                  %i.mdi-social-person-outline.prefix
                  = f.email_field :email, id:"email", class:"validate", label: false
                  %label.center-align{:for => "email", class:"center-align", "data-error" => "wrong", "data-success" => "right"} Email
              .row
                .input-field.col.s12
                  = f.button "Recover my Password", class:"btn waves-effect waves-light col s12"
            %p.center
              OR
              = render partial: "devise/shared/links"
      / Post Page - Responsive

